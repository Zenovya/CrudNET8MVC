<div class="container">
    <div class="card shadow rounded-1">
        <div class="card-header bg-dark">
            <h5 class="m-0 text-white"><i class="fa-solid fa-circle-info"></i> Details Contact</h5>
        </div>
        <div class="card-body">

            <div class="row col">
                <div class="col-sm-12 col-md-6 col-lg-6 mb-2">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Chris Jacobs" readonly />
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 col-lg-6 mb-2">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="ChJacobs@example.com" type="email" readonly />
                    </div>
                </div>
                <div class="col-sm-12 col-md-3 col-lg-4 mb-2">
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label">Phone</label>
                        <input asp-for="Phone" class="form-control" placeholder="22602762" readonly />
                    </div>
                </div>
                <div class="col-sm-12 col-md-3 col-lg-4 mb-2">
                    <div class="form-group">
                        <label asp-for="CellPhone" class="control-label">CellPhone</label>
                        <input asp-for="CellPhone" class="form-control" placeholder="76197868" readonly />
                    </div>
                </div>
                <div class="col-sm-12 col-md-6 col-lg-4 mb-3">
                    <div class="form-group">
                        <label asp-for="CreatedAt" class="control-label">Created At</label>
                        <input asp-for="CreatedAt" class="form-control" placeholder="76197868" readonly />
                    </div>
                </div>
                <div class="col-12">
                    <div class="d-grid gap-2 d-md-block d-md-flex justify-content-md-center">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-outline-secondary"><i class="fa-solid fa-left-long"></i> Back</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>