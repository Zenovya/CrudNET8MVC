<div class="container">
    <div class="card shadow rounded-1">

        <div class="card-header bg-dark">
            <h5 class="m-0 text-white"><i class="fa-regular fa-address-book"></i> Contact List</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col mb-3 d-flex justify-content-end">
                    <a asp-action="create" asp-controller="home" class="btn btn-sm btn-outline-primary"><i class="fa-solid fa-plus"></i> Create Contact</a>
                </div>
                <div class="col-12">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-bordered" cellspacing="0">
                            <thead class="table-dark">
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                                    <th>@Html.DisplayNameFor(m => m.Phone)</th>
                                    <th>@Html.DisplayNameFor(m => m.CellPhone)</th>
                                    <th>@Html.DisplayNameFor(m => m.CreatedAt)</th>
                                    <th></th>
                                </tr>
                            </thead>
                            @{
                                if (Model.Count() > 0)
                                {
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(m => item.Id)</td>
                                                <td>@Html.DisplayFor(m => item.Name)</td>
                                                <td>@Html.DisplayFor(m => item.Email)</td>
                                                <td>@Html.DisplayFor(m => item.Phone)</td>
                                                <td>@Html.DisplayFor(m => item.CellPhone)</td>
                                                <td>@Html.DisplayFor(m => item.CreatedAt)</td>
                                                <td class="text-center">
                                                    <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info"></i></a>
                                                    <a class="btn btn-sm btn-outline-success" asp-action="Update" asp-route-id="@item.Id"><i class="fa-regular fa-pen-to-square"></i></a>
                                                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-delete-left"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                }
                                else
                                {
                                    <tbody>
                                        <tr>
                                            <th colspan="7" class="fw-normal text-center">No hay registros para mostrar en la tabla</th>
                                        </tr>
                                    </tbody>
                                }
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
